<?xml version="1.0" encoding="UTF-8"?>
<report name="release">
  <variable name="release" value="${release}" required="true"/>
  <variable name="work" value="/Users/giles/workspace/XSLReporter/data" />
  <variable name="output" value="/Users/giles/workspace/XSLReporter/data" />
  <variable name="css" value="css/storydoc.css" />
  <extract id="release">
    <table>rm_release</table>
    <query>number=${release}</query>
    <output>${work}/${release}.release.xml</output>
  </extract>
  <extract id="story">
    <table>rm_story</table>
    <query>release.number=${release}</query>
    <output>${work}/${release}.story.xml</output>
  </extract>
  <transform>
    <xsl>xsl/merge.xsl</xsl>
    <input>${report}</input>
    <output>${work}/${release}.xml</output>
  </transform>
  <transform>
    <xsl>xsl/storydoc.xsl</xsl>
    <input>${work}/${release}.xml</input>
    <output>${output}/${release}.html</output>
  </transform>
</report>
